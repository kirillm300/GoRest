<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RecreationBookingApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:RecreationBookingApp.Views">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="login" />

    <ShellContent
        Title="Main"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="main" />

    <ShellContent
        Title="Places"
        ContentTemplate="{DataTemplate views:PlacesPage}"
        Route="places" />

    <ShellContent
        Title="Review"
        ContentTemplate="{DataTemplate views:ReviewPage}"
        Route="review" />

    <ShellContent
        Title="Bookings"
        ContentTemplate="{DataTemplate views:BookingsPage}"
        Route="bookings" />
</Shell>