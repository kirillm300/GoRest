<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RecreationBookingApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:RecreationBookingApp.Views"
    Shell.FlyoutBehavior="Flyout" >

    <ShellContent
        Title="Выйти"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="login"
        Shell.FlyoutBehavior="Disabled"/>

    <!--<ShellContent
        Title="Main"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="main" />-->

    <ShellContent
        Title="Список мест"
        ContentTemplate="{DataTemplate views:PlacesPage}"
        Route="places" />

    <ShellContent
        Title="Отзывы"
        ContentTemplate="{DataTemplate views:ReviewPage}"
        Route="review" />

    <ShellContent
        Title="Мои бронирования"
        ContentTemplate="{DataTemplate views:BookingsPage}"
        Route="bookings" />

    <ShellContent
        Title="OwnerBookings"
        ContentTemplate="{DataTemplate views:OwnerBookingsPage}"
        Route="ownerBookings"
        Shell.FlyoutBehavior="Disabled"
        />
</Shell>